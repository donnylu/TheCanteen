@model IEnumerable<TheCanteen.Models.Canteen.PointOfSale.Sale>

@{
	ViewBag.Title = "Sales";
}

<h2>Sale Screen</h2>

<p>
	@Html.ActionLink("Create Sale", "Create")
</p>

<table class="table">
	<tr>
		<th>
			Canteen
		</th>
		<th>
			Customer
		</th>
		<th></th>
	</tr>

	@foreach (var item in Model)
	{
		<tr>
			<td>
				@Html.DisplayFor(modelItem => item.Canteen.Name)
			</td>
			<td>
				@Html.DisplayFor(modelItem => item.Customer.Name)
			</td>
			<td>
				@Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
				@Html.ActionLink("Details", "Details", new { id = item.Id }) |
				@Html.ActionLink("Delete", "Delete", new { id = item.Id })
			</td>
		</tr>
	}

</table>